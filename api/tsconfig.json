{
  "compilerOptions": {
    "declaration": true,
    "lib": [
      "ES6"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "outDir": "dist/commonjs",
    "removeComments": true,
    "rootDir": "./",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "exclude": [
    "bower_components",
    "dist/commonjs",
    "node_modules"
  ]
}